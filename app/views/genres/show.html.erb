<div class="details">
  <h1><%= @genre.name %></h1>
  <% if @movies.present? %>
      <h4>Movies</h4>
      <ul>
        <% @movies.each do |movie| %>
          <li><%= link_to movie.title, movie %></li>
        <% end %>
      </ul>
    <% end %>
</div>


<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Delete", @genre, class: "button", method: :delete,
                                data: { confirm: "Really?!"} %>
  </section>
<% end %>